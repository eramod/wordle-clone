{{on-document 'keyup' this.onKeyup}}

<div class='guesses'>
  {{#each this.guesses as |guess index|}}
    <div class='row'>
      {{#each guess as |letter letterIndex|}}
        <div
          class='letter'
          data-test-row-index={{index}}
          data-test-letter-index={{letterIndex}}
        >
          {{uppercase letter}}
        </div>
      {{/each}}
    </div>
  {{/each}}
</div>

<div class='keyboard'>
  {{#each this.keyLayout as |row|}}
    <div class='row'>
      {{#each row as |key|}}
        <button type='button' class='key' {{on 'click' (fn this.onClick key)}}>
          {{uppercase key}}
        </button>
      {{/each}}
    </div>
  {{/each}}
</div>